from django.apps.registry import Apps
from django.db import migrations, models

# TODO: Also use this migration to create new levels and assign python levels to them

def rename_python_levels(apps: Apps, *args):
    Level = apps.get_model("game", "Level")

    def update_level_name(pk: int, name: str):
        # should we find the level by pk or by current name? Must name be unique?
        level = Level.objects.get(pk=pk)
        level.name = name
        level.save()

    update_level_name()